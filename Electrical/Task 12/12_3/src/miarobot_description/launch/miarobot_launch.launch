<launch>
  <!-- ================= Launch Arguments ================= -->
  <arg name="use_lidar" default="true" doc="Include LIDAR in robot URDF"/>

  <!-- ================= Robot Description ================= -->
  <param name="robot_description" 
         command="$(find xacro)/xacro '$(find miarobot_description)/urdf/model.urdf.xacro' use_lidar:=$(arg use_lidar)" />

  <!-- ================= Joint State Publisher ================= -->
  <node name="joint_state_publisher" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />

  <!-- ================= Robot State Publisher ================= -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
    <param name="publish_frequency" type="double" value="30.0"/>
  </node>

  <!-- ================= Gazebo ================= -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="/home/hod/Downloads/gamemap.sdf"/>  
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
  </include>

  <!-- ================= Spawn Robot ================= -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-param robot_description -urdf -model miarobot -x 0 -y 0 -z 0.01" />

  <!-- ================= Custom TF Node (state_publisher.py) ================= -->
  <node name="state_publisher" pkg="miarobot_description" type="state_publisher.py" output="screen" />

  <!-- ================= RViz ================= -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find miarobot_description)/rviz/miarobot.rviz" />
</launch>
