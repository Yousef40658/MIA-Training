<?xml version="1.0"?>
<robot name="visual">

    <!--Setting colors as a name and value pair-->
    <material name="blue">
        <color rgba="0.0 0.0 0.8 1.0"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1.0"/>
    </material>
    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>        
    </material>

    <!--Construction shapes Links-->
    <!--Right Side-->
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="0.6"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <link name="right_leg">
        <visual>
            <geometry>
                    <box size="0.6 0.1 0.2"/>
            </geometry>
            <origin rpy="0.0 1.5705 0.0" xyz = "0 0 -0.3"/>
            <material name="white"/>
        </visual>
    </link>

    <link name="right_base">
        <visual>
            <geometry>
                <box size="4 0.1 0.1"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.1"/>
            </geometry>
            <material name="black"/>
            <origin rpy="1.57075 0.0 0.0"/>
        </visual>
    </link>
    
    <link name="right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.1"/>
            </geometry>
            <material name="black"/>
            <origin rpy="1.57075 0.0 0.0"/>
        </visual>
    </link>

    <!--Left side-->

    <link name="left_leg">
        <visual>
            <geometry>
                <box size="0.6 0.1 0.2"/>
            </geometry> 
            <material name="white"/>
            <origin rpy="0 1.57075 0.0" xyz = "0 0 -0.3"/>
        </visual>
    </link>


    <link name="left_base">
        <visual>
            <geometry>
                <box size="4 0.1 0.1"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>
    
    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.1"/>
            </geometry>
            <material name="black"/>
            <origin rpy="1.57075 0.0 0.0"/>
        </visual>
    </link>
    
    <link name="left_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.1"/>
            </geometry>
            <material name="black"/>
            <origin rpy="1.57075 0.0 0.0"/>
        </visual>
    </link>

    <!--Gripper-->
    <link name="gripper_pole">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.2"/>
            </geometry>
            <material name="black"/>
            <origin rpy="0 1.57075 0.0"/>
        </visual>
    </link>

    <!--Left_side_gripper-->
    <link name="left_gripper">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz = "0 0 0"/>
            <geometry>
                <mesh filename="package://urdf_tutorial/meshes/l_finger.dae"/>
            </geometry>
        </visual>
    </link>

    <link name="left_tip">
        <visual>
        <origin rpy="0.0 0 0" xyz="0.09137 0.00495 0"/>
        <geometry>
            <mesh filename="package://urdf_tutorial/meshes/l_finger_tip.dae"/>
        </geometry>
        </visual>
    </link>
    
    <!--right_side_gripper-->
    <link name="right_gripper">
        <visual>
            <origin rpy="-3.1415 0.0 0.0" xyz = "0 0 0"/>
            <geometry>
                <mesh filename="package://urdf_tutorial/meshes/l_finger.dae"/>
            </geometry>
        </visual>
    </link>

    <link name="right_tip">
        <visual>
        <origin rpy="3.1415 0.0 0.0" xyz="0.09137 0.00495 0"/>
        <geometry>
            <mesh filename="package://urdf_tutorial/meshes/l_finger_tip.dae"/>
        </geometry>
        </visual>
    </link>

    <!--Head -->
    <link name="head">
        <visual>
            <geometry>
                    <sphere radius= "0.2"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!--Box-->
    <link name="box">
        <visual>
            <geometry>
                <box size="0.08 0.08 0.08"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>
    
    <!--Joints-->
    <!--Right_side-->
    <joint name="base_to_right_leg" type="fixed">
        <origin xyz="0.0 -0.22 0.25" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_leg"/>
    </joint>

    <joint name="right_base" type="fixed">
        <origin xyz="0.0 0 -0.6" rpy="0.0 0.0 0.0"/>
        <parent link="right_leg"/>
        <child link="right_base"/>
    </joint>

    <joint name="right_front_wheel" type="fixed">
        <origin xyz="0.13333 0 -0.085" rpy="0.0 0.0 0.0"/>
        <parent link="right_base"/>
        <child link="right_front_wheel"/>
    </joint>

    <joint name="right_back_wheel" type="fixed">
        <origin xyz="-0.1333 0 -0.085" rpy="0.0 0.0 0.0"/>
        <parent link="right_base"/>
        <child link="right_back_wheel"/>
    </joint>

    <!--left_side-->
    <joint name="base_to_left_leg" type="fixed">
        <origin xyz="0.0 0.22 0.25" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_leg"/>
    </joint>

    <joint name="left_base" type="fixed">
        <origin xyz="0.0 0 -0.6" rpy="0.0 0.0 0.0"/>
        <parent link="left_leg"/>
        <child link="left_base"/>
    </joint>

    <joint name="left_front_wheel" type="fixed">
        <origin xyz="0.13333 0 -0.085" rpy="0.0 0.0 0.0"/>
        <parent link="left_base"/>
        <child link="left_front_wheel"/>
    </joint>

    <joint name="left_back_wheel" type="fixed">
        <origin xyz="-0.1333 0 -0.085" rpy="0.0 0.0 0.0"/>
        <parent link="left_base"/>
        <child link="left_back_wheel"/>
    </joint>

    <!--Gripper-->
    <joint name="gripper_extension" type="fixed">
        <origin xyz="0.19 0 0.2" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="gripper_pole"/>
    </joint>

    <!--left_side_gripper-->
     <joint name="left_gripper_joint" type="fixed">
        <origin xyz="0.2 0.01 0" rpy="0.0 0.0 0.0"/>
        <parent link="gripper_pole"/>
        <child link="left_gripper"/>
    </joint>

    <joint name="left_tip_joint" type="fixed">
        <origin xyz="0.09137 0.00495 0" rpy="0.0 0.0 0.0"/>
        <parent link="left_gripper"/>
        <child link="left_tip"/>
    </joint>

    <!--right_side_gripper-->
    <joint name="right_gripper_joint" type="fixed">
        <origin xyz="0.2 -0.01 0" rpy="0.0 0.0 0.0"/>
        <parent link="gripper_pole"/>
        <child link="right_gripper"/>
    </joint>

    <joint name="right_tip_joint" type="fixed">
        <origin xyz="0.09137 0.00495 0" rpy="0.0 0.0 0.0"/>
        <parent link="right_gripper"/>
        <child link="right_tip"/>
    </joint>

    <!--Head-->
    <joint name="head_swivel" type="fixed">
        <origin xyz="0 0 0.3" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="head"/>
    </joint>

    <!---->
    <joint name="tobox" type="fixed">
        <origin xyz="0.1814 0 0.1414" rpy="0.0 0.0 0.0"/>
        <parent link="head"/>
        <child link="box"/>
    </joint>

</robot>
