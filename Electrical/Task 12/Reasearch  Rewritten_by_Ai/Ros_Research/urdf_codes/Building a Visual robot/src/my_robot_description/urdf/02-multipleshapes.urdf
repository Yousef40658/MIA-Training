<?xml version="1.0"?>
<robot name="multipleshapes">
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="0.6"/>
            </geometry>
        </visual>
    </link>

    <link name="right_leg">
        <visual>
            <geometry>
                <box size="0.6 0.1 0.2"/>
            </geometry>
            <origin rpy="0 1.57075 0" xyz="0 0 -0.3"/>
        </visual>
    </link>

    <!--Fixed joint to connect multiple shapes by joints-->
    <joint name="base_to_right" type="fixed">
        <parent link="base_link"/>
        <child link="right_leg"/>
        <!--Adds a new origin at a position -preferably at join-->
        <origin xyz="0 -0.0 -0.3" />
    </joint>
</robot>
