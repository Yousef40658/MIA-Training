<?xml version="1.0"?>
<robot name="Toyota">

    <!-- Base link -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="5"/>
            <inertia ixx="0.1" iyy="0.1" izz="0.1"
                     ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>

    <!-- Front Left Wheel -->
    <link name="wheel_fl">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <!-- For Gazebo: collision and inertia -->
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.01" iyy="0.01" izz="0.01"
                     ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>
    <joint name="wheel_fl_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_fl"/>
        <origin xyz="0.25 0.20 -0.1" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Front Right Wheel -->
    <link name="wheel_fr">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <!-- For Gazebo -->
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.01" iyy="0.01" izz="0.01"
                     ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>
    <joint name="wheel_fr_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_fr"/>
        <origin xyz="0.25 -0.20 -0.1" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Rear Left Wheel -->
    <link name="wheel_rl">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <!-- For Gazebo -->
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.01" iyy="0.01" izz="0.01"
                     ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>
    <joint name="wheel_rl_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_rl"/>
        <origin xyz="-0.25 0.20 -0.1" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Rear Right Wheel -->
    <link name="wheel_rr">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <!-- For Gazebo -->
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.01" iyy="0.01" izz="0.01"
                     ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>
    <joint name="wheel_rr_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_rr"/>
        <origin xyz="-0.25 -0.20 -0.1" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- LiDAR sensor -->
    <link name="lidar_link">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="grey">
                <color rgba="0.7 0.7 0.7 1"/>
            </material>
        </visual>
        <!-- For Gazebo -->
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.001" iyy="0.001" izz="0.001"
                     ixy="0.0" ixz="0.0" iyz="0.0"/>
        </inertial>
    </link>
    <joint name="lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="lidar_link"/>
        <origin xyz="0 0 0.25" rpy="0 0 0"/>
    </joint>

</robot>
